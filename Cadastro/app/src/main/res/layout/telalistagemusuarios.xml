<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txttitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:padding="20dp"
        android:text="Sistema de Cadastro"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="142dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/cad" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txttitulo"
        android:layout_marginLeft="200dp"
        android:text="Registros 1/10"
        android:textColor="@color/black"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/ReNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStatus"
        android:text="NOME:"
        android:textColor="@color/black"
        android:textSize="30dp"

        />

    <EditText
        android:id="@+id/txtRenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReNome"
        android:hint=""

        />


    <TextView
        android:id="@+id/ReEnde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRenome"
        android:text="ENDEREÇO:"
        android:textColor="@color/black"
        android:textSize="30dp"

        />

    <EditText
        android:id="@+id/txtReende"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReEnde"
        android:hint=""

        />
    <TextView
        android:id="@+id/ReTele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReende"
        android:text="TELEFONE:"
        android:textColor="@color/black"
        android:textSize="30dp"

        />

    <EditText
        android:id="@+id/txtRetele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReTele"
        android:hint=""

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAnterior"/>

    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRetele"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="220dp"
        android:padding="15dp"
        android:text="Anterior"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/btnProximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRetele"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:text="Próximo"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/btnFechar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnProximo"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:text="FECHAR"
        android:textSize="20dp"

        />



</RelativeLayout>